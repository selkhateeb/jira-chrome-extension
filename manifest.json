{
    "manifest_version": 2,

    "name": "Sam's Jira Reports",
    "description": "This extension shows custom Jira reports made by Sam",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        //"default_popup": "popup.html",
        "default_title": "Sam's Jira Reports"
    },

    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },

    "permissions": [
        "tabs",
        "activeTab",
        "https://ajax.googleapis.com/"
    ]
}

